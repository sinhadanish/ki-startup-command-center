# Ki Relationship Intelligence Platform - Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://postgres:password@localhost:5432/ki_db
REDIS_URL=redis://localhost:6379

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# OpenAI (for pattern recognition and analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (for empathy AI layer)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Default model settings
DEFAULT_MODEL=gpt-4
EMPATHY_MODEL=claude-3-sonnet-20240229

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data

# OAuth providers (for user authentication)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# =============================================================================
# EMAIL & COMMUNICATION
# =============================================================================
# Resend (for transactional emails)
RESEND_API_KEY=re_your-resend-api-key

# Twilio (for SMS notifications - optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# BUSINESS AUTOMATION (n8n integrations)
# =============================================================================
# Slack (for team notifications)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Airtable (for customer data)
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-airtable-base-id

# Calendly (for customer interviews)
CALENDLY_ACCESS_TOKEN=your-calendly-access-token

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# PostHog (for product analytics)
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Sentry (for error monitoring)
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NODE_ENV=development
DEBUG=true
LOG_LEVEL=info

# App URLs
NEXT_PUBLIC_WEB_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:8000

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# =============================================================================
# KI-SPECIFIC CONFIGURATION
# =============================================================================
# Relationship intelligence settings
PATTERN_RECOGNITION_THRESHOLD=0.7
EMOTIONAL_STATE_CONFIDENCE_THRESHOLD=0.6
RELATIONSHIP_MEMORY_DAYS=365
MAX_CONVERSATION_TURNS=50
CONVERSATION_TIMEOUT=1800

# Safety and moderation
SAFETY_DETECTION_ENABLED=true
CRISIS_INTERVENTION_ENABLED=true
PROFESSIONAL_REFERRAL_ENABLED=true

# Empathy AI settings
EMPATHY_RESPONSE_TEMPERATURE=0.7
DUAL_RESPONSE_ENABLED=true
SHARED_INSIGHTS_ENABLED=true

# =============================================================================
# PAYMENT PROCESSING (for subscription model)
# =============================================================================
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Subscription plans
BASIC_PLAN_PRICE_ID=price_basic_plan_id
PREMIUM_PLAN_PRICE_ID=price_premium_plan_id

# =============================================================================
# STORAGE & CDN
# =============================================================================
# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=ki-platform-storage

# Cloudflare (for CDN and additional security)
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Hume AI (for emotional intelligence)
HUME_API_KEY=your-hume-ai-api-key

# ElevenLabs (for voice synthesis - future)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# =============================================================================
# COMPLIANCE & SECURITY
# =============================================================================
# HIPAA compliance settings
HIPAA_COMPLIANT_MODE=true
DATA_RETENTION_DAYS=2555  # 7 years for healthcare data
AUDIT_LOGGING_ENABLED=true

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes