# Ki Platform - LangGraph AI Backend Environment Variables
# Copy this file to .env and fill in your values

# AI Service Keys (REQUIRED)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
HUME_API_KEY=your_hume_api_key_here

# Database Configuration (REQUIRED)
DATABASE_URL=postgresql://ki_user:ki_pass@localhost:5432/ki_db
REDIS_URL=redis://localhost:6379

# Security Keys (REQUIRED)
JWT_SECRET=your-jwt-secret-key-here
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Performance Configuration
MAX_CONCURRENT_RELATIONSHIPS=10000
VOICE_LATENCY_TARGET=100
EMOTION_DETECTION_THRESHOLD=0.89
ANXIETY_DETECTION_THRESHOLD=0.94

# Development Settings
ENVIRONMENT=development
LOG_LEVEL=info
DEBUG=true

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3004

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000